@using Dominio
@model Post 


@if (!String.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert alert-danger">
        @ViewBag.Mensaje
    </div>
}


<div class="container d-flex justify-content-center align-items-center">
    <form method="post" asp-action="AddPost" enctype="multipart/form-data" class="gradient-right bg-white rounded rounded-5 shadow p-5 d-flex flex-column justify-content-center align-items-center " novalidate>
    <h2>Crea un Post</h2>

        <div class="mb-3">
            <label  for="titulo">Titulo</label>
            <input type="text" class="form-control" id="titulo" name="Titulo" required>
        </div>

        <div class="mb-3">
            <label for="image">Elige una imagen</label>
            <input type="file" class="form-control" id="image" name="Image" required>
        </div>

        <div class="mb-3">
            <label for="texto">Escribe una descripcion...</label>
            <input asp-for="Texto" type="text" class="form-control" id="texto" name="Texto" required>
        </div>

        <div class="mb-3">
            <label class="form-check-label" for="publico">Publico</label>
            <input asp-for="Publico" class="form-check-input" value="true" type="checkbox" id="publico" name="Publico">
        </div>

        <button type="submit" class="btn btn-primary">Crear Post</button>
    </form>
</div>
