@using Dominio
@model List<Publicacion>

<div class="container d-flex flex-column justify-content-center align-items-center">
    <div class="input-group container d-flex flex-column justify-content-center align-items-center">
        <form asp-controller="Search" class="gradient-right bg-white rounded rounded-5 shadow p-5 d-flex flex-column justify-content-center align-items-center " asp-action="SearchPublicacion" method="post">
    <h2>Buscar un Post</h2>
            <input type="search" name="textoBuscado" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" required/>
            <input type="number" name="va" placeholder="Valor de Aceptacion" required/>
            <button type="submit" class="btn btn-outline-primary" data-mdb-ripple-init>Search</button>
        </form>
    </div>

    <div class="container d-flex flex-column justify-content-center align-items-center">
        <h2 class="my-2">@ViewBag.Mensaje</h2> 


        @foreach (Publicacion publicacion in Model)
        {
            if (publicacion is Post)
            {
                Post post = publicacion as Post;
                <div class="card mb-4">
                        <div class="card-body justify-content-center d-flex flex-column align-items-center gradient-right " style="max-width:650px;width:650px;">
                        <h4>Post</h4>
                        <h5 class="card-title">@post.Titulo</h5>
                        <p class="card-text">@post.Autor.Nombre @post.Autor.Apellido</p>
                        <p class="card-text">@post.Fecha</p>
                        <img src="/Images/@post.NombreImagen" alt="Imagen del post" class="img-fluid mb-3" />
                        <p class="card-text">@post.Texto</p>
                        <h6 class="mt-4">Reacciones:</h6>
                        <h6>❤ @post.CalcularLikes()</h6>
                        <h6>💔 @post.CalcularDislikes()</h6>

                    </div>
                </div>
                }
                if(publicacion is Comentario)
                {
                    Comentario comentario = publicacion as Comentario;
                <div class="card-body justify-content-center d-flex flex-column align-items-center gradient-right " style="max-width:650px;width:650px;">
            <ul class="list-group">
                <li class="list-group-item">
                    <h4>Comentario</h4>
                    <p>@comentario.Autor.Nombre @comentario.Autor.Apellido</p>
                    <p>Fecha: @comentario.Fecha</p>
                    <p>@comentario.Texto</p>
                    <p>Titulo: @comentario.Titulo</p>
                    <h6 class="mt-4">Reacciones:</h6>
                    <h6>❤ @comentario.CalcularLikes()</h6>
                    <h6>💔 @comentario.CalcularDislikes()</h6>
                    <h6>Valor de Aceptacion: @comentario.CalcularVA()</h6>

                </li>
            </ul>
            </div>
            }
        }

    </div>
</div>