@{
}




<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5 col-md-8">
                    <form method="post" class="bg-white rounded rounded-5 shadow-5-strong p-5">
                        <h1 >LOGIN</h1>
                        @if (!String.IsNullOrEmpty(ViewBag.MensajeExito))
                        {
                            <div class="alert alert-success">
                                @ViewBag.MensajeExito
                            </div>
                        }
                        @if (!String.IsNullOrEmpty(ViewBag.Mensaje))
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Mensaje
                            </div>
                        }
                        <div class="form-group">
                            <label for="Nombre">Email: </label>
                            <input type="text" class="form-control" id="Nombre" name="email" placeholder="ejemplo@gmail.com">
                        </div>


                        <div class="form-group mb-2">
                            <label for="Password">Password: </label>
                            <input type="password" class="form-control" id="Password" name="password" placeholder="Password">
                        </div>


                        <div class="d-flex">
                            <input type="submit" class="btn btn-primary btn-block" value="Log In" />
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="SignUp">Sign Up</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

