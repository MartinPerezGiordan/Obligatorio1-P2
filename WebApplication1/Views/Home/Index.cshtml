@using Dominio


<div class="container d-flex flex-column justify-content-center align-items-center" >
@foreach (Post post in ViewBag.Posts)
{
    <div class="card mb-4  justify-content-center  @(post.Censurado ? "bg-danger" : "")">
            <div class="card-body justify-content-center d-flex flex-column align-items-center gradient-right " style="max-width:650px;width:650px;">
            @if (post.Censurado && ViewBag.IsAdmin)
            {
                <form asp-controller="Home" asp-action="Descensurar" method="post">
                    <input type="hidden" name="postId" value="@post.Id" />
                    <button type="submit" class="btn btn-primary">Descensurar</button>
                </form>
                <h5>@post.Titulo</h5>
                <h5>@post.Autor.Nombre @post.Autor.Apellido</h5>

            }
            else if (!post.Censurado)
            {
                @if (ViewBag.IsAdmin)
                {
                    <form asp-controller="Home" asp-action="Censurar" method="post">
                        <input type="hidden" name="postId" value="@post.Id" />
                        <button type="submit" class="btn btn-danger">Censurar</button>
                    </form>
                }
                <h5 class="card-title">@post.Titulo</h5>
                <p class="card-text">@post.Autor.Nombre @post.Autor.Apellido</p>
                <p class="card-text">@post.Fecha</p>
                <img src="/Images/@post.NombreImagen" alt="@post.NombreImagen" class="img-fluid mb-3" />
                <p class="card-text">@post.Texto</p>
                <h6 class="mt-4">Reacciones:</h6>
                <div class="d-flex justify-content-center g-1">
                    @if (!ViewBag.IsAdmin)
                    {
                        <form asp-controller="Home" asp-action="LikePost" method="post">
                            <input type="hidden" name="postId" value="@post.Id" />
                            <input type="hidden" name="like" value="true" />
                            <button type="submit" class="btn btn-light @(post.HaDadoLike(ViewBag.IdUsuario) ? "btn-dark" : "")"><h6>❤ @post.CalcularLikes()</h6></button>
                        </form>

                        <form asp-controller="Home" asp-action="LikePost" method="post">
                            <input type="hidden" name="postId" value="@post.Id" />
                            <input type="hidden" name="like" value="false" />
                            <button type="submit" class="btn btn-light @(post.HaDadoDislike(ViewBag.IdUsuario) ? "btn-dark" : "")"><h6>💔 @post.CalcularDislikes()</h6></button>
                        </form>
                    }
                </div>
                <h6>Valor de Aceptacion: @post.CalcularVA()</h6>

                <h6 class="mt-4">Comentarios:</h6>
                <ul class="list-group">
                    @foreach (Comentario comentario in post.GetComentarios())
                    {
                        <li class="list-group-item">
                            <h5>@comentario.Titulo</h5>
                            <p>@comentario.Autor.Nombre @comentario.Autor.Apellido</p>
                            <p>Fecha: @comentario.Fecha</p>
                            <p>@comentario.Texto</p>
                            <h6 class="mt-4">Reacciones:</h6>
                            <div class="d-flex justify-content-center g-1">
                                @if (!ViewBag.IsAdmin)
                                {
                                    <form asp-controller="Home" asp-action="LikeComentario" method="post">
                                        <input type="hidden" name="ComentarioId" value="@comentario.Id" />
                                        <input type="hidden" name="like" value="true" />
                                        <button type="submit" class="btn btn-light @(comentario.HaDadoLike(ViewBag.IdUsuario) ? "btn-dark" : "")"><h6>❤ @comentario.CalcularLikes()</h6></button>
                                    </form>

                                    <form asp-controller="Home" asp-action="LikeComentario" method="post">
                                        <input type="hidden" name="ComentarioId" value="@comentario.Id" />
                                        <input type="hidden" name="like" value="false" />
                                        <button type="submit" class="btn btn-light @(comentario.HaDadoDislike(ViewBag.IdUsuario) ? "btn-dark" : "")"><h6>💔 @comentario.CalcularDislikes()</h6></button>
                                    </form>
                                }
                            </div>
                            <h6>Valor de Aceptacion: @comentario.CalcularVA()</h6>
                        </li>
                    }
                </ul>
                @if (!ViewBag.IsAdmin)
                {
                    <form asp-controller="AddComment" asp-action="Comment" method="get">
                        <input type="hidden" name="postId" value="@post.Id" />
                        <button type="submit" class="btn btn-outline-light"><h6>💬 Comentar</h6></button>
                    </form>
                }
            }
        </div>
    </div>
}
</div>
